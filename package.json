{
    "name": "file-shortcut",
    "displayName": "File Shortcut",
    "description": "add/open/delete your favorite file list",
    "icon": "img/file.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ctf0/vscode-file-shortcut"
    },
    "publisher": "ctf0",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.25.0"
    },
    "keywords": [
        "file",
        "bookmark",
        "shortcut"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:list",
        "onCommand:fileShortcut.showFileList",
        "onCommand:fileShortcut.addCurrentFile",
        "onCommand:fileShortcut.deleteFile",
        "onCommand:fileShortcut.openFile"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "file-shortcut",
                    "title": "File Shortcut",
                    "icon": "img/file.svg"
                }
            ]
        },
        "views": {
            "file-shortcut": [
                {
                    "id": "list",
                    "name": "Files List"
                }
            ]
        },
        "commands": [
            {
                "command": "fileShortcut.showFileList",
                "title": "File Shortcut: Open Files List"
            },
            {
                "command": "fileShortcut.addCurrentFile",
                "title": "File Shortcut: Add Current File To List"
            },
            {
                "command": "fileShortcut.deleteFile",
                "title": "File Shortcut: Delete Current/File From List",
                "icon": "$(chrome-close)"
            },
            {
                "command": "fileShortcut.openFile",
                "title": "open file"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "!explorerResourceIsFolder",
                    "group": "myGroup@1"
                },
                {
                    "command": "fileShortcut.deleteFile",
                    "when": "!explorerResourceIsFolder",
                    "group": "myGroup@1"
                }
            ],
            "view/title": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "view == list && editorIsOpen"
                }
            ],
            "view/item/context": [
                {
                    "command": "fileShortcut.deleteFile",
                    "when": "view == list",
                    "group": "inline"
                }
            ],
            "commandPalette": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "editorIsOpen"
                },
                {
                    "command": "fileShortcut.deleteFile",
                    "when": "editorIsOpen"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "File Shortcuts",
            "properties": {
                "fileShortcut.list": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "uniqueItems": true,
                    "description": "List of favorite Files. e.g /home/user/cheatsheet.md"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vscode": "^1.25.0"
    },
    "dependencies": {
        "lodash.debounce": "^4.0.8"
    }
}
