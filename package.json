{
    "name": "file-shortcut",
    "displayName": "File Shortcut",
    "description": "add/open/delete your favorite file list",
    "icon": "img/file.png",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-file-shortcut",
    "version": "0.1.1",
    "engines": {
        "vscode": "^1.25.0"
    },
    "keywords": [
        "file",
        "bookmark",
        "shortcut"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onFileSystem:file",
        "onView:fs_list",
        "onCommand:fileShortcut.showFileList",
        "onCommand:fileShortcut.addCurrentFile",
        "onCommand:fileShortcut.deleteFile",
        "onCommand:fileShortcut.openFile"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "file-shortcut",
                    "title": "File Shortcut",
                    "icon": "img/file.svg"
                }
            ]
        },
        "views": {
            "file-shortcut": [
                {
                    "id": "fs_list",
                    "name": "Files List"
                }
            ]
        },
        "commands": [
            {
                "command": "fileShortcut.showFileList",
                "title": "File Shortcut: Open Files List"
            },
            {
                "command": "fileShortcut.addCurrentFile",
                "title": "File Shortcut: Add Current File To List",
                "icon": "$(add)"
            },
            {
                "command": "fileShortcut.deleteFile",
                "title": "File Shortcut: Delete Current File From List",
                "icon": "$(chrome-close)"
            },
            {
                "command": "fileShortcut.openFile",
                "title": "open file"
            },
            {
                "command": "fileShortcut.sort",
                "title": "change list sorting",
                "icon": "$(sort-precedence)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "!explorerResourceIsFolder",
                    "group": "fsc@1"
                },
                {
                    "command": "fileShortcut.deleteFile",
                    "when": "!explorerResourceIsFolder",
                    "group": "fsc@1"
                }
            ],
            "editor/context": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "fscEnabled",
                    "group": "fsc@1"
                },
                {
                    "command": "fileShortcut.deleteFile",
                    "when": "fscEnabled",
                    "group": "fsc@1"
                }
            ],
            "editor/title": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "fscEnabled",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "view == fs_list && fscEnabled",
                    "group": "navigation"
                },
                {
                    "command": "fileShortcut.sort",
                    "when": "view == fs_list && fscHasFiles",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "fileShortcut.deleteFile",
                    "when": "view == fs_list",
                    "group": "inline"
                }
            ],
            "commandPalette": [
                {
                    "command": "fileShortcut.addCurrentFile",
                    "when": "fscEnabled"
                },
                {
                    "command": "fileShortcut.deleteFile",
                    "when": "fscEnabled"
                },
                {
                    "command": "fileShortcut.openFile",
                    "when": "false"
                },
                {
                    "command": "fileShortcut.sort",
                    "when": "false"
                }
            ]
        },
        "configuration": {
            "title": "File Shortcuts",
            "type": "object",
            "properties": {
                "fileShortcut.list": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "uniqueItems": true,
                    "description": "List of favorite Files. e.g /home/user/cheatsheet.md"
                },
                "fileShortcut.sort": {
                    "type": "string",
                    "default": "length",
                    "enum": [
                        "alpha",
                        "length"
                    ],
                    "description": "sort treeview list alphabetically or by text length"
                },
                "fileShortcut.hideSidebarTimeOut": {
                    "type": "number",
                    "default": 0.5,
                    "description": "in seconds, toggle sidebar after file is opened (0 == do nothing)\n 'only works when file is opened from treeview'"
                },
                "fileShortcut.OpenInNewGroup": {
                    "type": "boolean",
                    "default": true,
                    "description": "open files in new group next to current group"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "typescript": "^3.6.2",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "lodash.debounce": "^4.0.8"
    }
}
